<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floatingBarLayoutRight"
    android:layout_width="300dp"
    android:layout_height="75dp">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/drawer_right"
        android:gravity="center">

        <ImageView
            android:id="@+id/floatingScreentshotRight"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/screenshot"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="2dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/floatingCropRight"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/crop"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="2dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/floatingLanguageRight"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/eng"
            android:clickable="true"
            android:layout_marginRight="56dp"
            android:layout_marginBottom="2dp"/>


    </LinearLayout>


</RelativeLayout>