<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Floating Button">

        <CheckBoxPreference
            android:key="floatingButtonUse"
            android:title="Floating Button 사용"
            android:summary="이 앱의 Floating Button 기능을 활성화합니다."/>
        <SwitchPreference
            android:key="floatingButtonLocation"
            android:title="Floating Button 위치 고정"
            android:summary="Floating Button 위치를 현재 위치에 고정합니다."
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="OCR Option">

        <ListPreference
            android:key="ocrSelect"
            android:title="언어 설정"
            android:summary="인식할 언어를 선택합니다.\n현재 언어 : "
            android:entries="@array/array_ocr"
            android:entryValues="@array/array_ocr"/>


    </PreferenceCategory>

</PreferenceScreen>